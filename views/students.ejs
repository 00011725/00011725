
<%- include("header") -%>

<h1>List of students (<%= model.length %>)</h1>

<div class="table-responsive-sm">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Surname</th>
        <th>Comments</th>
        <th class="d-print-none">
          <a class="btn btn-sm btn-success" href="/create">Add</a>
        </th>
      </tr>
    </thead>
    <tbody>
      <% for (const student of model) { %>
        <tr>
          <td><%= student.Name %></td>
          <td><%= student.Surname %></td>
          <td><%= student.Comments %></td>
          <td class="d-print-none">
            <a class="btn btn-sm btn-warning" href="/edit/<%= student.Student_ID %>">Edit</a>
            <a class="btn btn-sm btn-danger" href="/delete/<%= student.Student_ID %>">Delete</a>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include("footer") -%>