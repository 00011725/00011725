<div class="form-group row">
    <label class="col-form-label col-sm-2" for="Name">Name</label>
    <div class="col-sm-8">
      <input readonly class="form-control" id="Name" value="<%= model.Name %>" />
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-form-label col-sm-2" for="Surname">Surname</label>
    <div class="col-sm-7">
      <input readonly class="form-control" id="Surname" value="<%= model.Surname %>" />
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-form-label col-sm-2" for="Comments">Comments</label>
    <div class="col-sm-10">
      <textarea readonly class="form-control" cols="20" id="Comments" maxlength="32000" rows="7"><%= model.Comments %></textarea>
    </div>
  </div>